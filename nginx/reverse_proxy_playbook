---
# nginx/setup_nginx_reverse_proxy.yml
- name: Setup Nginx Reverse Proxy
  hosts: web_servers
  become: yes
  vars:
    upstream_host: 127.0.0.1
    upstream_port: 8080
  tasks:
    - name: Install Nginx
      apt:
        name: nginx
        update_cache: yes

    - name: Configure Nginx reverse proxy
      copy:
        dest: /etc/nginx/sites-available/reverse-proxy
        content: |
          server {
              listen 80;

              location / {
                  proxy_pass http://{{ upstream_host }}:{{ upstream_port }};
                  proxy_set_header Host $host;
                  proxy_set_header X-Real-IP $remote_addr;
                  proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
              }
          }

    - name: Enable reverse proxy config
      file:
        src: /etc/nginx/sites-available/reverse-proxy
        dest: /etc/nginx/sites-enabled/reverse-proxy
        state: link
        force: yes

    - name: Remove default config if exists
      file:
        path: /etc/nginx/sites-enabled/default
        state: absent

    - name: Restart Nginx
      systemd:
        name: nginx
        state: restarted

